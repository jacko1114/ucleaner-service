@{
    ViewBag.Title = "社群註冊";
}
@section CSS{
    <link rel="stylesheet" href="~/Assets/css/account/SocialRegister.css">
}

@if (!string.IsNullOrEmpty(ViewBag.Email) && !string.IsNullOrEmpty(ViewBag.Photo) && !string.IsNullOrEmpty(ViewBag.Social))
{
    <section class="section_social-register">
        <div class="social-register-modal">
            <form action="" class="form">
                <div class="form-header">
                    <h3>使用<span class="social-platform">@ViewBag.Social</span>註冊<img src="~/Assets/Images/@(ViewBag.Social).png"></h3>
                    <img src="@ViewBag.Photo" alt="profieImg" class="pic" />
                </div>
                <div class="form-body">
                    <div class="form-group position-relative">
                        <input type="text" name="AccountName" id="AccountName" class="input" />
                        <div class="row align-items-center flex-nowrap label-group active">
                            <label class="label" for="AccountName">帳號名稱</label><i class="fas fa-exclamation-circle" title="必填，需包含至少1位英文字母且長度起碼6個字元"></i>
                        </div>
                        <p class="warn social-register-accountname"></p>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="isIntegrated" id="Checkbox" />
                        <label class="label isIntegrated" for="isIntegrated">是否已有本站帳號並想與之整合、合併</label>
                        <div class="checkbox-controlled position-relative">
                            <input type="password" name="Password" id="Password" class="input" />
                            <div class="row align-items-center flex-nowrap label-group active">
                                <label class="label" for="Password">密碼</label><i class="fas fa-exclamation-circle" title="必填，請輸入當時註冊之密碼，以便我方進行查核"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group  position-relative">
                        <input type="email" name="Email" id="Email" class="input social-email" value="@ViewBag.Email" readonly />
                        <div class="row align-items-center flex-nowrap label-group active email-zone">
                            <label class="label" for="Email">信箱</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <p>若要繼續註冊，請先閱讀並同意 [uCleaner-打掃服務] 的服務條款與隱私政策  <a href="#">服務條款</a> & <a href="#">隱私政策</a></p>
                        <div class="btns-group d-flex justify-content-end mt-4">
                            <a href="/Account/Register" class="button cancel" type="button">取消</a>
                            <button class="button submit" type="button">
                                註冊
                                <div class="spinner-border-wrap opacity">
                                    <span class="spinner-border"></span>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
}
else
{
    <section class="section_social-register">
        <div class="social-register-modal">
            <form action="" class="form">
                <div class="form-header">
                    <h3>使用<span class="social-platform"></span>註冊<img src=""></h3>
                    <img src="#" alt="無圖片" class="pic" />
                </div>
                <div class="form-body">
                    <div class="form-group position-relative">
                        <input type="text" name="AccountName" id="AccountName" class="input" />
                        <div class="row align-items-center flex-nowrap label-group active">
                            <label class="label" for="AccountName">帳號名稱</label><i class="fas fa-exclamation-circle" title="必填，需包含至少1位英文字母且長度起碼6個字元"></i>
                        </div>
                        <p class="warn social-register-accountname"></p>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" name="isIntegrated" id="Checkbox" />
                        <label class="label isIntegrated" for="isIntegrated">是否已有本站帳號並想與之整合、合併</label>
                        <div class="checkbox-controlled position-relative">
                            <input type="password" name="Password" id="Password" class="input" />
                            <div class="row align-items-center flex-nowrap label-group active">
                                <label class="label" for="Password">密碼</label><i class="fas fa-exclamation-circle" title="必填，請輸入當時註冊之密碼，以便我方進行查核"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group  position-relative">
                        <input type="email" name="Email" id="Email" class="input social-email" placeholder="(選填)" />
                        <div class="row align-items-center flex-nowrap label-group active">
                            <label class="label" for="Email">信箱</label>
                            <i class="fas fa-exclamation-circle" title="若填寫完整 Email ，即贈優惠卷 乙 張"></i>
                        </div>
                        <p class="warn social-register-email"></p>
                    </div>
                    <div class="form-group">
                        <p>若要繼續註冊，請先閱讀並同意 [uCleaner-打掃服務] 的服務條款與隱私政策  <a href="#">服務條款</a> & <a href="#">隱私政策</a></p>
                        <div class="btns-group d-flex justify-content-end mt-4">
                            <a href="/Account/Register" class="button cancel" type="button">取消</a>
                            <button class="button submit" type="button">
                                註冊
                                <div class="spinner-border-wrap opacity">
                                    <span class="spinner-border"></span>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
}

@section JS{
    <script src="~/Assets/js/account/SocialRegister.js"></script>
}